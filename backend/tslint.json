{
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "object-literal-sort-keys": false,
        "quotemark": "single",
        "arrow-parens": [true, "ban-single-arg-parens"]
    },
    "linterOptions": {
        "exclude": [
            "dist",
            "test/**/*.ts"
        ]
    }
}